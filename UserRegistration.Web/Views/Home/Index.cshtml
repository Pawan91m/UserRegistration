@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <form asp-controller="Home" asp-action="Edit" method="post">
        <div class="container">
            <div class="form-group row">
                <label class="col-sm-2 offset-2 col-form-label" for="firstName">First Name</label>
                <input class="col-sm-6 form-control" type="text" name="firstName" />
            </div>
            <div class="form-group row">
                <label class="col-sm-2 offset-2 col-form-label" for="lastName">Last Name</label>
                <input class="col-sm-6 form-control" type="text" name="lastName" />
            </div>
            <button class="btn btn-primary" type="submit">Save</button>
        </div>
    </form>
</div>
